# Useage:  make -f SampleMake
# To use executable MyProb, add ../lib to LD_LIBRARY_PATH
# Warning: paths and compiler options are machine dependent

SHELL         = /bin/sh

LIBDIR        = ../lib
SNOPT_LIBS    =   -lsnopt   -lsnprint   -lblas
SNOPT_AR      =  libsnopt  libsnprint  libblas
SNOPT_AR_LIBS = $(SNOPT_AR:%=$(LIBDIR)/%.a)

FC            = /usr/local/bin/g95
FFLAGS        = -O

MyProb: MyProb.o
	$(FC) $(FFLAGS) $(RFLAGS) $^ -o $@ -L$(LIBDIR) $(SNOPT_LIBS) $(LIBRARIES)

MyProb.o: MyProb.f
	$(FC) -c $(FFLAGS) $< -o $@
